# Stream Token Server Configuration
# Copy this file to .env.token_server and update the values with your Stream credentials

# Server Configuration
PORT=3000
NODE_ENV=development

# Stream Chat API Credentials (from your Stream Dashboard)
STREAM_API_KEY=your_stream_chat_api_key_here
STREAM_API_SECRET=your_stream_chat_secret_here

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:8000,http://localhost:8080

# Logging
LOG_LEVEL=debug

# Security
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100  # max requests per window per IP
